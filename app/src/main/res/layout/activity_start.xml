<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mad2"
    android:outlineProvider="background"
    tools:context=".Activity.StartActivity">

    <LinearLayout
        android:layout_width="416dp"
        android:layout_height="810dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:layout_marginTop="250px"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/mainLogo"
            style="@android:style/Widget.DeviceDefault.TextView"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="300px"
            android:fontFamily="@font/aclonica"
            android:paddingHorizontal="0px"
            android:paddingVertical="50px"
            android:paddingTop="20px"
            android:shadowColor="#5E1C1C"
            android:text="SPRINKLES BAKERS"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#2C2C2C"
            android:textIsSelectable="false"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200px"
            android:layout_marginBottom="50px"
            android:text="Welcome to SPRINKLES"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Sprinkles Bakery Cupcakes â€“ Where Sweet Dreams Begin!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_Login"
            style="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100px"
            android:layout_marginBottom="20px"

            android:backgroundTint="#CB56DF"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="true"
            android:text="Login"
            android:textAlignment="center"
            android:textColor="#FCFFFFFF"
            android:textSize="20sp"
            app:iconTintMode="screen" />

        <Button
            android:id="@+id/btn_Register"
            android:layout_width="298dp"
            android:layout_height="49dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#CB56DF"
            android:gravity="center_horizontal"
            android:hapticFeedbackEnabled="true"

            android:text="Register"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:iconTintMode="screen" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>