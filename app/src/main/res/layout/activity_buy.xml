<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BuyActivity"
    android:background="@drawable/mad3">

    <LinearLayout
        style="border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_B_Back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="95dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="Go Back"
                android:textAlignment="viewStart"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="57dp"
                android:layout_height="65dp"
                android:layout_gravity="right"
                android:layout_marginLeft="600px"
                android:layout_weight="1"
                android:foregroundGravity="right"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/armata"
            android:gravity="center_horizontal"
            android:text="BUY PRODUCTS"
            android:textColor="#000000"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="100px"
            android:layout_marginRight="20px"
            android:layout_marginBottom="220px"
            android:fontFamily="@font/armata"
            android:text="Indulge in delight with our delectable cupcakes. Sweet moments await!"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:gravity="center_horizontal"
                    android:text="Search Cupcake"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/txt_S_Id"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  CUPCAKE ID"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <Button
                    android:id="@+id/btn_S_Search"
                    android:layout_width="235dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100px"
                    android:backgroundTint="#8F62DF"
                    android:backgroundTintMode="add"
                    android:fontFamily="@font/armata"
                    android:padding="70px"
                    android:rotation="0"
                    android:rotationY="0"
                    android:text="SEARCH"
                    android:textAlignment="center"
                    android:textColor="#FBFBFB"
                    android:textColorHint="#8F8484"
                    android:textSize="20sp"
                    app:cornerRadius="30px" />

                <TextView
                    android:id="@+id/textView43"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="50px"
                    android:fontFamily="@font/armata"
                    android:text="CATEGORY"
                    android:textColorHighlight="#000000" />

                <EditText
                    android:id="@+id/txt_S_Category"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="CATEGORY"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="50px"
                    android:fontFamily="@font/armata"
                    android:text="CUPCAKE NAME"
                    android:textColorHighlight="#000000" />

                <EditText
                    android:id="@+id/txt_S_CupName"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="CUPCAKE NAME"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <TextView
                    android:id="@+id/textView50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="50px"
                    android:fontFamily="@font/armata"
                    android:text="PRICE"
                    android:textColorHighlight="#000000" />

                <EditText
                    android:id="@+id/txt_S_Price"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="PRICE"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <TextView
                    android:id="@+id/textView51"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="50px"
                    android:fontFamily="@font/armata"
                    android:text="DISCOUNT"
                    android:textColorHighlight="#000000" />

                <EditText
                    android:id="@+id/txt_S_Discount"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="DISCOUNT"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginTop="50px"
                    android:fontFamily="@font/armata"
                    android:text="QUANTITY"
                    android:textColorHighlight="#000000" />

                <EditText
                    android:id="@+id/txt_S_Quantity"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="QUANTITY"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <TextView
                    android:id="@+id/textView42"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="200px"
                    android:gravity="center_horizontal"
                    android:text="Buy Cupcake"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/txt_B_OrderId"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  ORDER ID"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <EditText
                    android:id="@+id/txt_B_Quantity"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  QUANTITY"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <Button
                    android:id="@+id/btn_B_Buy"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100px"
                    android:backgroundTint="#8F62DF"
                    android:backgroundTintMode="add"
                    android:fontFamily="@font/armata"
                    android:padding="70px"
                    android:text="BUY"
                    android:textAlignment="center"
                    android:textColor="#FBFBFB"
                    android:textColorHint="#8F8484"
                    android:textSize="20sp"
                    app:cornerRadius="30px" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>