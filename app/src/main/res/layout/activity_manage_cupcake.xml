<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ManageCupcakeActivity"
    android:background="@drawable/mad3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_Cup_Back"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="68dp"
                android:layout_height="59dp"
                android:contentDescription="Go Back"
                android:textAlignment="viewStart"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="700px"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:visibility="visible"
                app:srcCompat="@drawable/logo" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:fontFamily="@font/armata"
            android:paddingLeft="40px"
            android:text="MANAGE CUPCAKES"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200px"
            android:paddingLeft="20px"
            android:paddingTop="150px"
            android:paddingRight="20px"
            android:text="Cupcakes unite bakers, creating sweet, artistic delights to savor together."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Add Cupcake"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/txt_Cup_Id"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  CUPCAKE ID"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <EditText
                    android:id="@+id/txt_Cup_CatId"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  CATEGORY ID"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <EditText
                    android:id="@+id/txt_Cup_Name"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  CUPCAKE NAME"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <EditText
                    android:id="@+id/txt_Cup_Price"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  CUPCAKE PRICE"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <EditText
                    android:id="@+id/txt_Cup_Discount"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  DISCOUNT"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <EditText
                    android:id="@+id/txt_Cup_Quantity"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  QUANTITY"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <Button
                    android:id="@+id/btn_Cup_Add"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100px"
                    android:backgroundTint="#8F62DF"
                    android:backgroundTintMode="add"
                    android:fontFamily="@font/armata"
                    android:padding="70px"
                    android:text="ADD"
                    android:textAlignment="center"
                    android:textColor="#FBFBFB"
                    android:textColorHint="#8F8484"
                    android:textSize="20sp"
                    app:cornerRadius="30px" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150px"
                    android:gravity="center_horizontal"
                    android:text="Delete Cupcake"
                    android:textColor="#000000"
                    android:textSize="34sp" />

                <EditText
                    android:id="@+id/txt_DelCup_Id"
                    style="@android:style/Widget.Material.Light.AutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"

                    android:backgroundTint="#2196F3"
                    android:ems="10"
                    android:fontFamily="@font/armata"
                    android:hint="ENTER  CUPCAKE ID"
                    android:inputType="text"
                    android:paddingVertical="50px"
                    android:paddingLeft="50px"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textColorHint="#8F8484" />

                <Button
                    android:id="@+id/btn_DelCup_Delete"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100px"
                    android:layout_marginBottom="100px"
                    android:backgroundTint="#8F62DF"
                    android:backgroundTintMode="add"
                    android:fontFamily="@font/armata"
                    android:padding="70px"
                    android:text="DELETE"
                    android:textAlignment="center"
                    android:textColor="#FBFBFB"
                    android:textColorHint="#8F8484"
                    android:textSize="20sp"
                    app:cornerRadius="30px" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>